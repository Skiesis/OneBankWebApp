@section Scripts {

    <script>
        var user = @Html.Raw(Json.Serialize(ViewBag.user));
        var session_time = "@Html.Raw(ViewBag.session_time)";
        var products = @Html.Raw(Json.Serialize(ViewBag.products));
    </script>

    <script src="~/js/pages/transaction_inter.js"></script>

