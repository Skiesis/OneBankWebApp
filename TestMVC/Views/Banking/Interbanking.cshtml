                <div class="form-group col-12" v-if="transaction.bank != ''">
                    <span class="bold h1 text-primary text-uppercase">Recipient Tax ID</span>
                    <input class="form-control" v-model="transaction.done_to" />
                </div>
                <div class="form-group col-12" v-if="transaction.bank != ''">
                    <span class="bold h1 text-primary text-uppercase">Account</span>
                    <input class="form-control" v-model="transaction.acc_to" />
                </div>
                <div class="form-group col-12" v-if="transaction.bank != ''">
                    <span class="bold h1 text-primary text-uppercase">Amount</span>
                    <input class="form-control" v-model="transaction.amount" />
                </div>
                <div class="form-group col-12" v-if="transaction.bank != ''">
                    <span class="bold h1 text-primary text-uppercase">Description</span>
                    <input class="form-control" v-model="transaction.description" />
                </div>
            </div>
            <div class="card-footer align-items-center">
                <div>
                    <button v-on:click="openConfirmModal" v-bind:class="{disabled : transaction.bank == ''}" type="button" class="btn btn-primary btn-md text-uppercase font-weight-bold chat-send py-2 px-6">Send</button>
                </div>
            </div>
        </div>
